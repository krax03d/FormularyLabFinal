<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_main"
    android:orientation="vertical"
    tools:context=".Fragment_Trigo_Tangente">

    <TextView
        android:id="@+id/tv_trigo_tangente_tittle"
        android:layout_width="718dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center|center_horizontal"
        android:text="@string/trigo_tangente_tittle"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_trigo_tangente_content"
        android:layout_width="221dp"
        android:layout_height="183dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bordes"
        android:gravity="center|center_horizontal"
        android:text="@string/trigo_tangente_content"
        android:textSize="19sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_trigo_tangente_tittle"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="430dp"
        android:layout_height="157dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/trigo_tangente"
        android:contentDescription="@string/trigo_tangente_tittle"
        app:layout_constraintStart_toEndOf="@+id/tv_trigo_tangente_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_trigo_tangente_tittle" />

    <Button
        android:id="@+id/bt_trigo_tangente_save"
        android:layout_width="213dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/boton_save_effect"
        android:text="@string/trigo_tangente_save"
        app:layout_constraintStart_toEndOf="@+id/tv_trigo_tangente_content"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/bt_trigo_tangente_more"
        android:layout_width="215dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/boton_more_effect"
        android:text="@string/trigo_tangente__more"
        app:layout_constraintStart_toEndOf="@+id/bt_trigo_tangente_save"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</android.support.constraint.ConstraintLayout>