<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_main"
    android:orientation="vertical"
    tools:context=".Fragment_Trigo_Coseno">

    <TextView
        android:id="@+id/tv_trigo_coseno_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center|center_horizontal"
        android:text="@string/trigo_coseno_tittle"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_trigo_coseno_content"
        android:layout_width="199dp"
        android:layout_height="217dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bordes"
        android:gravity="center|center_horizontal"
        android:text="@string/trigo_coseno_content"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_trigo_coseno_tittle" />

    <ImageView
        android:id="@+id/iv_trigo_coseno_image"
        android:layout_width="439dp"
        android:layout_height="147dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/trigo_coseno"
        android:contentDescription="@string/trigo_coseno_tittle"
        app:layout_constraintStart_toEndOf="@+id/tv_trigo_coseno_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_trigo_coseno_tittle" />

    <Button
        android:id="@+id/bt_trigo_coseno_save"
        android:layout_width="216dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/boton_save_effect"
        android:text="@string/trigo_coseno_save"
        app:layout_constraintStart_toEndOf="@+id/tv_trigo_coseno_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_trigo_coseno_image" />

    <Button
        android:id="@+id/bt_trigo_coseno_more"
        android:layout_width="222dp"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/boton_more_effect"
        android:text="@string/trigo_coseno__more"
        app:layout_constraintStart_toEndOf="@+id/bt_trigo_coseno_save"
        app:layout_constraintTop_toBottomOf="@+id/iv_trigo_coseno_image" />
</android.support.constraint.ConstraintLayout>